{
	"compilerOptions": {
		"module": "Node18",
		"moduleResolution": "node16",
		"pretty": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"target": "ES2024",
		"outDir": "./dist",
		"baseUrl": "./src",
		"experimentalDecorators": true,
		"typeRoots": [
			"./src/types"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"src/**/*.spec.ts"
	]
}