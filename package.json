{
  "name": "nodejs-typescript-template",
  "version": "1.470.0",
  "description": "A template for a nodejs application, using typescript",
  "main": "dist/app.js",
  "author": "",
  "license": "MIT",
  "module": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src/**/*.ts --exec tsx ./src/app.ts",
    "build": "tsc",
    "start": "node ./dist/app.js",
    "lint": "eslint --fix --quiet src/**/*.ts",
    "format": "prettier --loglevel silent --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.44.0",
    "icloudjs": "1.6.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "samsung-frame-connect": "^0.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "type-fest": "^4.40.1",
    "typescript": "^5.8.3",
    "typescript-eslint-parser": "^22.0.0"
  }
}
