{
  "name": "nodejs-typescript-template",
  "version": "1.470.0",
  "description": "A template for a nodejs application, using typescript",
  "main": "dist/app.js",
  "author": "",
  "license": "MIT",
  "module": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src/**/*.ts --exec tsx ./src/app.ts",
    "build": "tsc",
    "start": "node ./dist/app.js",
    "start:deno": "deno run --allow-read --allow-write --allow-net --allow-env --allow-sys --allow-run --unstable --watch src/app.ts",
    "lint": "eslint --fix --quiet src/**/*.ts",
    "format": "prettier --loglevel silent --write src/**/*.ts",
    "test": "mocha --require tsx/cjs --recursive 'test/**/*.test.ts'",
    "test:watch": "mocha --require tsx/cjs --recursive 'test/**/*.test.ts' --watch",
    "test:coverage": "nyc mocha --require tsx/cjs --recursive 'test/**/*.test.ts'",
    "test:unit": "mocha --require tsx/cjs --recursive 'test/unit/**/*.test.ts'",
    "test:integration": "mocha --require tsx/cjs --recursive 'test/integration/**/*.test.ts'"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.44.0",
    "icloudjs": "1.6.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "samsung-frame-connect": "^0.9.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.15.2",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "chai": "^5.1.1",
    "deno": "^2.3.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.10",
    "nyc": "^15.1.0",
    "prettier": "^3.5.3",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "type-fest": "^4.40.1",
    "typescript": "^5.8.3",
    "typescript-eslint-parser": "^22.0.0"
  }
}
